#include<stdio.h>
#include<conio.h>
#define MAX_SIZE 1000
int main()

{
    int arr[MAX_SIZE];
    int i,n,sum=0;
    
    printf("\n enter the size of an array = ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("\n enter the array %d position = ",i);
        scanf("%d",&arr[i]);
    }
    
    printf("\n array elements are = ");
    for(i=0;i<n;i++)
    {
        printf("\t %d",arr[i]);
    }
    
    for(i=0;i<n;i++)
    {
        sum=sum+arr[i];
    }
    printf("\n sum of an array elemnets are = %d",sum);
    
    return 0;
}
