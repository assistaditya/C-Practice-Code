#include<stdio.h>
#include<conio.h>

int main()
{
    
    float principal,rate,time;
    float simpleintrest;
    printf("\n Enter the principal amount = ");
    scanf("%f",&principal);
    printf("\n Enter the rate of simple interest = ");
    scanf("%f",&rate);
    printf("\n Enter the time duration = ");
    scanf("%f",&time);
    simpleintrest=(principal*rate*time)/100;
    printf("\n simpleintrest = %f",simpleintrest);
    return 0;
}
